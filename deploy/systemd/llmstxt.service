[Unit]
Description=llmstxt-social (Docker Compose)
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/llmstxt-social
ExecStart=/usr/bin/docker compose -f docker-compose.single.yml up -d --build
ExecStop=/usr/bin/docker compose -f docker-compose.single.yml down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
